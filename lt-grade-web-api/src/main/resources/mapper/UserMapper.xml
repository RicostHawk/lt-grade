<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.windsoft.my.shop.web.api.dao.UserDao">

    <sql id="userColumns">
        dt.uid,
        dt.stu_id,
        dt.tec_id,
        dt.email,
        dt.password,
        dt.nickname,
        dt.created,
        dt.updated,
        dt.juridisdiction
    </sql>

    <select id="getByEmail" resultType="User">
        SELECT
        <include refid="userColumns"/>
        FROM
        user AS dt
        WHERE
        dt.email = #{email}
    </select>

</mapper>